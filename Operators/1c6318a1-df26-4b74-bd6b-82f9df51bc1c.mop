      "Name": "Code",
      "MetaInstanceID": "695436a0-72cc-4753-b3a6-ec01ec32e347",
      "DefaultValue": {
        "Type": "Text",
        "Value": [
          "//>>> _common parameters\r",
          "float4x4 objectToWorldMatrix;",
          "float4x4 worldToCameraMatrix;",
          "float4x4 projMatrix;",
          "Texture2D txDiffuse;",
          "float2 RenderTargetSize;",
          "//<<< _common parameters\r",
          "\r",
          "//>>> _parameters\r",
          "Texture2D Image1;",
          "Texture2D Image2;",
          "float Radius;",
          "float2 Size;",
          "float4 Color;",
          "float Threshold;",
          "float4 EdgeColor;",
          "float Amplify;",
          "//<<< _parameters\r",
          " \r",
          "//>>> setup\r",
          "SamplerState samLinear\r",
          "{\r",
          "    Filter = MIN_MAG_MIP_LINEAR;\r",
          "    AddressU = Clamp;\r",
          "    AddressV = Clamp;\r",
          "};\r",
          "//<<< setup\r",
          "\r",
          "//>>> declarations\r",
          "struct VS_IN\r",
          "{\r",
          "    float4 pos : POSITION;\r",
          "    float2 texCoord : TEXCOORD;\r",
          "};\r",
          "\r",
          "struct PS_IN\r",
          "{\r",
          "    float4 pos : SV_POSITION;\r",
          "    float2 texCoord: TEXCOORD0;\t    \r",
          "    float3 worldTViewPos: TEXCOORD1;\r",
          "    float3 worldTViewDir: TEXCOORD2;\r",
          "};\r",
          "//<<< declarations\r",
          "\r",
          "//>>> _GS\r",
          "",
          "//<<< _GS\r",
          "\r",
          "//>>> _VS \r",
          "PS_IN VS( VS_IN input )",
          "{",
          "    PS_IN output = (PS_IN)0;",
          "",
          "    output.pos = mul(input.pos, worldToCameraMatrix);",
          "    output.pos = mul(output.pos, projMatrix);",
          "    output.texCoord = input.texCoord;",
          "",
          "    return output;",
          "}",
          "//<<< _VS\r",
          "\r",
          "//>>> PS\r",
          "float4 PS( PS_IN input ) : SV_Target\r",
          "{\r",
          "    float2 p=input.texCoord;\r",
          "    float width, height;\r",
          "    Image1.GetDimensions(width, height);    \r",
          "    \r",
          "    float3 c1x1=Image1.Sample(samLinear, float2(p.x + Radius / width, p.y  )).rgb; \r",
          "    float3 c1x2=Image1.Sample(samLinear, float2(p.x - Radius / width, p.y  )).rgb; \r",
          "    float3 c1y1=Image1.Sample(samLinear, float2(p.x, p.y + Radius / width  )).rgb; \r",
          "    float3 c1y2=Image1.Sample(samLinear, float2(p.x, p.y - Radius / width )).rgb; \r",
          "    \r",
          "    float4 c1=Image1.Sample(samLinear, float2(p.x, p.y  )); \r",
          "    \r",
          "    float match_c = clamp( (Threshold - length( c1.rgb - Color.rgb)) * Amplify, 0,1);\r",
          "    float match_x1 = clamp( (Threshold - length( c1x1.rgb - Color.rgb)) * Amplify, 0,1);\r",
          "    float match_x2 = clamp( (Threshold - length( c1x2.rgb - Color.rgb)) * Amplify, 0,1);\r",
          "    float match_y1 = clamp( (Threshold - length( c1y1.rgb - Color.rgb)) * Amplify, 0,1);\r",
          "    float match_y2 = clamp( (Threshold - length( c1y2.rgb - Color.rgb)) * Amplify, 0,1);\r",
          "    \r",
          "    float edge = (abs( match_x1 - match_x2) + abs( match_y1 - match_y2)) * EdgeColor.a;\r",
          "                   \r",
          "\r",
          "    float4 c2= Image2.Sample(samLinear, p); \r",
          "    float4 c= lerp (c1, c2, match_c);\r",
          "    c= lerp(c, EdgeColor, max(0, min(1, (edge * EdgeColor.a*4))));\r",
          "    return c;\r",
          "    \r",
          "\r",
          "    //float a = t0.a + t1.a - t0.a * t1.a;\r",
          "    //float3 rgb=  t0.rgb * t1.a * t1.rgb;   \r",
          "    //return t1/SampleCount;\r",
          "    //return col1+col2;\r",
          "    \r",
          "}\r",
          "//<<< PS\r",
          "\r",
          "//>>> _technique\r",
          "technique10 Render",
          "{",
          "    pass P0",
          "    {",
          "        SetGeometryShader( 0 );",
          "        SetVertexShader( CompileShader( vs_4_0, VS() ) );",
          "        SetPixelShader( CompileShader( ps_4_0, PS() ) );",
          "    }",
          "}",
          "//<<< _technique\r",
          ""
        ]
